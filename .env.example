##############################
# Amazon Scraper .env example
# Copy this file to `.env` and fill values as needed.
##############################

# Required: Amazon deals page URL to scrape
AMAZON_DEALS_URL=https://www.amazon.com/events/wintersale

# How many new deals to fetch per run (default 15)
AMAZON_FETCH_LIMIT=60

# Pagination: Number of items per "page" jump (default 60)
AMAZON_PAGE_SIZE=60

# Stop after this many scroll attempts if items don't load (Fallback Mode)
AMAZON_MAX_SCROLL_ATTEMPTS=120

# Stop after this many consecutive rounds with no NEW ASINs discovered
AMAZON_MAX_NO_NEW=12

# Delay (ms) to wait after each scroll so lazy-loaded items can appear
AMAZON_SCROLL_DELAY_MS=1500

# Max page reloads if page is blank or fails to load items
AMAZON_MAX_RELOADS=3

# If set to true, only include deals that show a discount
AMAZON_ONLY_DISCOUNTS=true

# Affiliate tag to append to product links (optional)
AMAZON_TAG=your-tag-20

# Where to persist seen ASINs (relative path). Default is seen_asins.json
SEEN_ASINS_PATH=seen_asins.json

# Where to persist last read position (relative path). Default is lastPosition.json
LAST_POSITION_PATH=lastPosition.json

# Puppeteer options
# Run headless: true/false
PUPPETEER_HEADLESS=true

# Launch timeout (ms)
LAUNCH_TIMEOUT=30000

# Optional: override default retries when launching browser
LAUNCH_RETRIES=2

# Google Sheets Configuration
SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_CREDS_JSON=credentials.json
